<?xml version="1.0" encoding="UTF-8"?>
<!-- search for documents larger than 1000 Bytes and less than 10'000'000'000.
Note: you must always include lowerTerm and upperTerm. 
The include-attributes are optional and default to true.
 -->
<ConstantScoreQuery>																
	<RangeFilter fieldName="contentsize" lowerTerm="00000000000000001000" upperTerm="99999999999999999999" includeLower="false" includeUpper="true"/>
</ConstantScoreQuery>
